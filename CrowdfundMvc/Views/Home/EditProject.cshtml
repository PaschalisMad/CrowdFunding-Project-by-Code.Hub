@model CrowdfundMvc.Models.ProjectModel
@{
    ViewData["Title"] = "Project Update";
}

    <h1 align="center" style="        padding-top: 100px;
        margin-top: auto;
        font-family: 'Permanent Marker', cursive;
        color: #1b6ec2;">Project Update </h1>

    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form action="projectDataForm" style="
    padding-top: 40px;">
                <div class="form-group row">
                    <label for="Title" class="col-sm-2 col-form-label">Title</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Title" value="@Model.Title" placeholder="Title">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Description" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Description" value="@Model.Description" placeholder="Description">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Goal" class="col-sm-2 col-form-label">Goal</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Goal" value="@Model.Goal" placeholder="Goal">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="StatusUpdate" class="col-sm-2 col-form-label">StatusUpdate</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="StatusUpdate" value="@Model.StatusUpdate" placeholder="StatusUpdate">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input class="btn btn-primary" type="button" onclick="doUpdateProject(@Model.ProjectId, @Model.ProjectCreator.Id)" value="Submit">
                    </div>
                </div>
            </form>
        </div>
        
        <div class="col"></div>

    </div>
<div id="responseDiv">   </div>
