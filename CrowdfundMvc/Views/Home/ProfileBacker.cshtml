@model CrowdfundMvc.Models.BackerModel
@{
    ViewData["Title"] = "ProfileBacker";
}

<style>
    .thead-dark {
        background-color: #1b6ec2;
    }

    body {
        background-color: #F5F5F5;
    }
</style>


    <div style=" padding-bottom: 50px; font-family: 'Permanent Marker', cursive; color: #1b6ec2;" class="text-center">
        <h1>Welcome @Model.FullName</h1>

    </div>


<div class="row">
    
    <div class="col-sm-2">
        <div class="card">
            <img class="card-img-top" src="/Images/profileicon.png">
            <div class="card-body">
                <h5 class="card-title">FullName: @Model.FullName</h5>
                <h5 class="card-title">Address: @Model.Address</h5>
                <h5 class="card-title">Email: @Model.Email</h5>
                <h5 class="card-title">Phone: @Model.Phone</h5>
                <div class="row">
                    <div class="col">
                        <button type="button" class="btn btn-primary"
                                href="#" onclick="ProfileToShowTrendingProject(@Model.BackerId)">
                            Trends
                        </button>
                    </div>
                    <div class="col">
                        <button type="button" class="btn btn-primary"
                                href="#" onclick="ShowAlProjects(@Model.BackerId)">
                            Projects
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-9" style="margin-left: 70px">

        <div class="card">
            <table class="table">
                <thead class="thead-light">

                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Reward</th>
                        <th scope="col">Price </th>
                        <th scope="col">Title </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var x = 1;
                        //razor syntax
                        foreach (var bfp in Model.backerFundingPackages)
                        {
                            <tr id="cusTable@(bfp.Id)">
                                <th scope="row">@x</th>
                                <td>@bfp.FundingPackage.Reward </td>
                                <td>@bfp.FundingPackage.Price</td>
                                <td>@bfp.Project.Title</td>
                            </tr>
                            x++;
                        }
                    }
                </tbody>
            </table>
        </div>


        <div class="card" style="padding-top: 25px;">
            <table class="table">
                <thead class="thead-light">

                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">StatusUpdate </th>
                        <th scope="col">TotalFundings </th>
                        <th scope="col">Goal </th>
                        <th scope="col">Category </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                       
                        //razor syntax
                        foreach (var project in Model.Projects)
                        {
                            <tr href="#" onclick="ProfileProjectBacker(@project.Id, @Model.BackerId)" class='clickable-row' id="cusTable@(project.Id)">
                                
                                <td>@project.Title </td>
                                <td>@project.Description</td>
                                <td>@project.StatusUpdate</td>
                                <td>@project.TotalFundings</td>
                                <td>@project.Goal</td>
                                <td>@project.Category</td>
                            </tr>
                           
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>

    </div>








