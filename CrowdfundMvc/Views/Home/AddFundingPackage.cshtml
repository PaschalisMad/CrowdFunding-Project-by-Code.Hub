@model CrowdfundMvc.Models.ProjectModel
@{
    ViewData["Title"] = "AddFundingPackage";
}


    <h1 align="center" style="        padding-top: 100px;
        margin-top: auto;
        font-family: 'Permanent Marker', cursive;
        color: #1b6ec2;
"> AddFundingPackage </h1>

    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form action="submitBackerToServer()" style="
    padding-top: 40px;">
                <div class="form-group row">
                    <label for="Price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Price" placeholder="Price">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="Reward" class="col-sm-2 col-form-label">Reward</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="Reward" placeholder="Reward">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <input class="btn btn-primary" type="button" onclick="createpackage(@Model.ProjectId, @Model.ProjectCreator.Id)" value="Submit">
                    </div>
                </div>
            </form>
        </div>
       
        <div class="col"></div>
    </div>




        
