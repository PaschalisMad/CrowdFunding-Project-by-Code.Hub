@model CrowdfundMvc.Models.ProjectModel
@{
    ViewData["Title"] = "Projects";
}


<div style=" padding-bottom: 50px; font-family: 'Permanent Marker', cursive; color: #1b6ec2;" class="text-center">
    <h1>@Model.Category</h1>

</div>



<div class="container">

    <div class="row" style="padding-top: 25px">
        <div class="col-sm-12">
            <div class="card">

                <table id="myTable" class="table table-hover">
                    <tr>

                        <th>Title</th>
                        <th>Description </th>
                        <th>StatusUpdate</th>
                        <th>TotalFundings</th>
                        <th>Goal</th>
                        <th>Category</th>
                        @*<th>ShowFundingPackages</th>*@

                    </tr>
                    @{
                        //razor syntax
                        foreach (var project in Model.Projects)
                        {
                            <tr href="#" onclick="ProfileProjectBacker(@project.Id, @Model.BackerId)" class='clickable-row' id="cusTable@(project.Id)">

                                <td>@project.Title</td>
                                <td> @project.Description </td>
                                <td> @project.StatusUpdate</td>
                                <td> @project.TotalFundings</td>
                                <td> @project.Goal</td>
                                <td> @project.Category</td>
                            </tr>
                        }
                    }
                </table>
                </div>
            </div>
        </div>
</div>